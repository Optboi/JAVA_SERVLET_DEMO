import javax.servlet.*;
import javax.servlet.annotation.WebFilter;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;
import java.io.IOException;

@WebFilter(urlPatterns = {"/*"}, dispatcherTypes = {DispatcherType.REQUEST, DispatcherType.FORWARD})// /* is project ma vayeko sabai file check garcha
public class FilterSession implements Filter {


    @Override
    public void doFilter(ServletRequest servletRequest, ServletResponse servletResponse, FilterChain filterChain) throws IOException, ServletException {
        HttpServletRequest request = (HttpServletRequest) servletRequest;
        HttpServletResponse response = (HttpServletResponse) servletResponse;

        String servletPath = request.getServletPath();
        
        // login ra sign up page display huna sessions chaidaina so
        if (servletPath.equals("/Login")||servletPath.equals("/Signup")||servletPath.equals("/login.html") || servletPath.equals("/signup.html")) {
            filterChain.doFilter(request, response);//acess dincha yesle
            return;
        }
        

        HttpSession session = request.getSession(false);

        
        if (session != null) {
            filterChain.doFilter(request, response); 
        } else {
            
            response.sendRedirect("login.html");//session chaina vane redirect
        }
    }

    @Override
    public void destroy() {
        // Cleanup code, if any
    }
}